<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>


<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-select">Airline:</label>
    <select type="text" name="airline" id="airline-input">
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>

    </select>
    <label for="airport-select">Airport:</label>
    <select name="airport" id="airport-input">
      <option value="DEN" selected>DEN</option>
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <option value="DEN" selected></option>
    <label for="flightNo-input">Flight #:</label>
    <input type="number" name="flightNo" id="flightNo-input">
    <label for="departs-input">Departs:</label>
    <input type="datetime-local" name="departs" id="departs-id">
    <button type="submit">Add Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>